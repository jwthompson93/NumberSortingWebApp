@model CreateViewModel
@{
    ViewData["Title"] = "Create New Sort Job";
}

@if (TempData.ContainsKey("alert"))
{
    <div class="alert alert-@Model.alert.Type.ToString()" role="alert">
        @Model.alert.Message
    </div>
}

<div class="container text-left">
    <h2>Create Sort</h2>
    <br/>
    <form method="post" asp-action="Create">
        <table class="table">
            <tr>
                <td>Numbers</td>
                <td>
                    <input type="text" class="form-control" asp-for="NumbersInput" required/>
                    <div class="valid-feedback"></div>
                </td>
                <td>
                    Please enter a Comma-separated Integer array. Example: '1,6,2,7,14,73,13'
                </td>
            </tr>
            <tr>
                <td>Sort Order</td>
                <td>
                    <select class="form-control" asp-for="SortDirection">
                        <option value="0">Descending</option>
                        <option value="1">Ascending</option>
                    </select>
                </td>
                <td>
                </td>
            </tr>
        </table>
        <div style="text-align:left">
            <!--<a asp-area="" asp-controller="NumberSorting" asp-action="Create" class="btn btn-primary btn-sm">Create</a>-->
            <input class="btn btn-primary btn-sm" type="submit" />
        </div>
    </form>
</div>
